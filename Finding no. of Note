#include<iostream>
using namespace std;
int main()
{
	int amount;
	int 20,50,100,500;
    20 = 50 = 100 = 500 =0;
	cout<<"Please Enter Your total Amount to find the notes : ";
	cin>>amount;
	switch(amount>=500)
	{
		case 1:
			500 = amount/500;
        	amount -= 500 * 500;
        break;
	}
	switch(amount >=100)
	{
		case 1:
			100 = amount/100;
        	amount -= 100 * 100;
        break;
	}
	switch(amount >=50)
	{
		case 1:
			50 = amount/50;
        	amount -= 50 * 50;
	}
	switch(amount >=20)
	{
		case 1:
			20 = amount/20;
        	amount -= 20 * 20;
        break;
	}
	
	cout << "500 = " << 500 <<endl;
    cout << "100 = " << 100 <<endl;
    cout << "50 = " << 50 <<endl;
    cout << "20 = " << 20 <<endl;
}
